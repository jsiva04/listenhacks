# Backboard.io API key (required)
BACKBOARD_API_KEY=your_backboard_api_key_here

# Server port (default: 3000)
PORT=3000

# Thread strategy:
#   false = one thread per (team_id, user_id) — all standups accumulate in one thread
#   true  = one thread per (team_id, user_id, date) — fresh thread each day
THREAD_PER_DAY=false
